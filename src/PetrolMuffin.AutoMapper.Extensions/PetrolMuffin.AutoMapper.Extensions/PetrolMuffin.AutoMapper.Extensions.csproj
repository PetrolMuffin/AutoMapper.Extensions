<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net48;net6.0;net8.0</TargetFrameworks>
        <IsPackable>true</IsPackable>
        <Version>1.0.0</Version>
        <Authors>Aleksandr Tereshchenko</Authors>
        <Description>Extension methods for AutoMapper</Description>
        <PackageProjectUrl>https://github.com/PetrolMuffin/PetrolMuffin.AutoMapper.Extensions</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>PetrolMuffin 2024</Copyright>
    </PropertyGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0' ">
      <PackageReference Include="AutoMapper" Version="13.0.1" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">
      <PackageReference Include="AutoMapper" Version="13.0.1" />
    </ItemGroup>
    
    <ItemGroup Condition=" '$(TargetFramework)' == 'net48' ">
        <PackageReference Include="AutoMapper" Version="10.1.1" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2023.3.0" />
    </ItemGroup>

</Project>
